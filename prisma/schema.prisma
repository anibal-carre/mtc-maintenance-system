generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(cuid())
  name      String
  username  String    @unique
  password  String
  isAdmin   Boolean   @default(false)
  createdAt DateTime
  updatedAt DateTime?
}

model Product {
  id            String    @id @default(cuid())
  name          String
  quantity      Int
  buyQuantity   Int
  stockQuantity Int
  createdAt     DateTime
  updatedAt     DateTime?
}

model Key {
  id        String    @id @default(cuid())
  key       String
  door      String
  createdAt DateTime
  updatedAt DateTime?
}
